{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "strictNullChecks": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
